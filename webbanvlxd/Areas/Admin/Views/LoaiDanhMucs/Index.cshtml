@model IEnumerable<webbanvlxd.Models.LoaiDanhMuc>

@{
    ViewData["Title"] = "Index";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Trang chủ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Loại danh mục</li>
    </ol>
</nav>

<h1>Danh sách loại danh mục</h1>

<div class="my-3">
    <a class="btn btn-outline-primary" asp-action="Create">
        <i class="fa-solid fa-plus"></i> Thêm loại danh mục
    </a>
</div>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                Tên loại danh mục
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.LoaiDanhMucID">
                    <i class="fa-solid fa-pen-to-square"></i>
                </a>
                <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.LoaiDanhMucID">
                    <i class="fa-solid fa-circle-info"></i>
                </a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.LoaiDanhMucID">
                    <i class="fa-solid fa-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
