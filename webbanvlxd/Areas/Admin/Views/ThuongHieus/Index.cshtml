@model IEnumerable<webbanvlxd.Models.ThuongHieu>

@{
    ViewData["Title"] = "Index";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Trang chủ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Thương hiệu</li>
    </ol>
</nav>

<h1>Danh sách thương hiệu</h1>

<div class="my-3">
    <a class="btn btn-outline-primary" asp-action="Create">
        <i class="fa-solid fa-plus"></i> Thêm sản phẩm
    </a>
</div>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                Tên thương hiệu
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenThuongHieu)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ThuongHieuID">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.ThuongHieuID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
