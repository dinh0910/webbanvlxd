@model IEnumerable<webbanvlxd.Models.SanPham>

@{
    ViewData["Title"] = "Index";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Trang chủ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Sản phẩm</li>
    </ol>
</nav>

<h1>Danh sách sản phẩm</h1>

<div class="my-3">
    <a class="btn btn-outline-primary" asp-action="Create">
        <i class="fa-solid fa-plus"></i> Thêm sản phẩm
    </a>
</div>

<table class="table table-hover mt-3" id="myTable">
    <thead>
        <tr>
            <th>
                Danh mục
            </th>
            <th>
                Thương hiệu
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Sale
            </th>
            <th>
                Thành tiền
            </th>
            <th>
                Số lượng
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DanhMuc.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThuongHieu.TenThuongHieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSanPham)
            </td>
            <td>
                <img src="~/images/products/@Html.DisplayFor(modelItem => item.HinhAnh)" class="img-thumbnail" width="150" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThanhTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                <div class="d-flex justify-content-center">
                    <div>
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.SanPhamID">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                    </div>
                    <div>
                        <a class="ms-3 btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.SanPhamID">
                            <i class="fa-solid fa-circle-info"></i>
                        </a>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
